{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "build/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": []
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"]
    },
    "type-check": {
      "dependsOn": ["^type-check"]
    },
    "docs:build": {
      "dependsOn": ["^docs:build"],
      "outputs": ["docs/build/**"]
    },
    "journal:publish": {
      "dependsOn": ["core"],
      "outputs": []
    }
  },
  "globalDependencies": [
    "README.md",
    "LICENSE",
    "turbo.json",
    "package.json",
    "pnpm-lock.yaml"
  ]
}
